<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LogWriteFragment"
    android:id="@+id/log_write_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/category_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="25sp"
                android:background="@drawable/left_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginTop="25sp"
                android:text="취소하기"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="25sp"
                android:background="@drawable/register_icon"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/category_detail_item_textview_border"
                            android:text="미정"
                            android:textColor="@color/right_arrow" />

                        <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/category_detail_item_textview_border"
                            android:text="자료구조"
                            android:textColor="@color/right_arrow" />

                        <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/category_detail_item_textview_border"
                            android:text="백준"
                            android:textColor="@color/right_arrow" />

                        <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/category_detail_item_textview_border"
                            android:text="PBL"
                            android:textColor="@color/right_arrow" />

                        <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/category_detail_item_textview_border"
                            android:text="AOS"
                            android:textColor="@color/right_arrow" />

                        <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/category_detail_item_textview_border"
                            android:text="iOS"
                            android:textColor="@color/right_arrow" />

                    </LinearLayout>

                </HorizontalScrollView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/category_detail_item_textview_border"
                    android:gravity="left"
                    android:hint="본문을 작성해주세요."
                    android:padding="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="Tag"
                    android:textColor="@color/right_arrow"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/category_detail_item_textview_border"
                    android:hint="태그는 ;으로 구분해서 적어주세요. ex) 백준;"
                    android:padding="10sp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="백준"
                    android:textColor="@color/right_arrow"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/baekjoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/category_detail_item_textview_border"
                    android:text="+"
                    android:textColor="@color/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="깃허브"
                    android:textColor="@color/right_arrow"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/category_detail_item_textview_border"
                    android:text="+"
                    android:textColor="@color/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="사진"
                    android:textColor="@color/right_arrow"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/picture_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/category_detail_item_textview_border"
                    android:text="사진 추가하기"
                    android:textColor="@color/right_arrow" />

                <ImageView
                    android:id="@+id/picture_view"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_margin="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/category_detail_item_textview_border"
                    android:text="+"
                    android:textColor="@color/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="코드"
                    android:textColor="@color/right_arrow"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/category_detail_item_textview_border"
                    android:gravity="left"
                    android:hint="코드를 입력해주세요."
                    android:padding="20sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</FrameLayout>